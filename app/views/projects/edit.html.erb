<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2>Project Editing</h2>
            </header>
            <div class="panel-body">
              <div class="form">
                <%= form_for(@project, html: {class: "form-validate form-horizontal" }) do |f| %>
                  <%= render 'partials/error_messages', object: @project %>                
                  <div class="form-group ">
                      <%= f.label :name, "Name", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.text_field :name, :class => "form-control" %>
                    </div>
                  </div> 
                  <div class="form-group ">
                      <%= f.label :description, "Description", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.text_field :description, :class => "form-control" %>
                    </div>
                  </div> 
                  <div class="form-group ">
                      <%= f.label :percentage_completion, "Percentage of completion", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.number_field :percentage_completion, :class => "form-control" %>
                    </div>
                  </div> 
                  <div class="form-group ">
                      <%= f.label :nemployees, "Number of Employees", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.text_field :nemployees, :class => "form-control" %>
                    </div>
                  </div>                   
                  <div class="form-group ">
                      <%= f.label :ninvestors, "Number of Investors", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.text_field :ninvestors, :class => "form-control" %>
                    </div>
                  </div> 
                  <div class="form-group">
                      <label class="control-label col-lg-2 col-md-1 col-sm-1 col-xs-6" for="inputSuccess">Hiring</label>
                      <div class="col-sm-1 col-xs-6">
                          <div class="checkbox">
                                  <%= f.check_box :hiring %> 
                          </div>
                      </div>
                  </div>                                                                                                                   
                  <div class="form-group ">
                      <div class="col-lg-10-lg-offset-2 col-lg-10">
                          <%= f.submit "Update", :class => "btn btn-primary wideButton"%>
                          <%= link_to "Cancel", hosts_path, :method => :get, :class => "btn btn-default wideButton" %>
                      </div>
                  </div>                
                <% end %> 
              </div>
            </div>
        </section>   
    </div>
</div>

