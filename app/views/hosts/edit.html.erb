<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2>Host Profile Editing</h2>
            </header>

            <div class="panel-body">
              <div class="form">
                <%= form_for(@host, html: {class: "form-validate form-horizontal" }) do |f| %>
                  <%= render 'partials/error_messages', object: @host %>                

                  <div class="form-group ">
                      <%= f.label :description, "Description", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.text_field :description, :class => "form-control" %>
                    </div>
                  </div>                                                                                                
                  <div class="form-group ">
                      <%= f.label :interest_list, "Interests", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.text_field :interest_list,  :class => "tagsinput form-control", :id => "tagsinput", value: f.object.interest_list.map { |t| t}.join(', ') %>
                    </div>
                  </div> 
                  <div class="form-group ">
                      <%= f.label :skill_list, "Skills", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= f.text_field :skill_list, :class => "tagsinput form-control", :id => "tagsinput", value: f.object.skill_list.map { |t| t}.join(', ') %>
                    </div>
                  </div>                     
                  <div class="form-group ">
                      <div class="col-lg-10-lg-offset-2 col-lg-10">
                          <%= f.submit "Update", :class => "btn btn-primary wideButton"%>
                          <%#= link_to "Cancel", edit_user_registration_path, :method => :get, :class => "btn btn-default wideButton" %>
                      </div>
                  </div>
                <% end %> 
              </div>
            </div>
        </section>   
    </div>
</div>

