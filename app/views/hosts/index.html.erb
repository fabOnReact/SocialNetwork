<!-- Search -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Modify Search Criteria
            </header>
            <div class="panel-body">
                <%= form_for(@location, :url => { :action => :index_update}, html: {method: :get, class: "form-inline" }) do |f| %>
                  <div class="row">
                      <div class="form-group col-lg-3 responsiveInlineFormGroup">
                          <%= f.label :country, "Country", :class => "control-label responsiveInlineForm" %>
                          <%= f.text_field :country, :class => "form-control responsiveInlineForm" %>
                      </div>
                      <div class="form-group col-lg-3 responsiveInlineFormGroup">
                          <%= f.label :location, "Location", :class => "control-label responsiveInlineForm" %>
                          <%= f.text_field :location, :class => "form-control responsiveInlineForm" %>
                      </div> 
                        <%= f.fields_for :ads_attributes do |ad| %>
                        <div class="form-group col-lg-3 responsiveInlineFormGroup">
                          <%= ad.label :skill_list, "Skills", :class => "control-label responsiveInlineForm" %>
                          <%= ad.text_field :skill_list, :class => "form-control responsiveInlineForm", :placeholder => "for ex. css, html, javascript," %>
                        </div>                                                            
                      <div class="form-group col-lg-3 responsiveInlineFormGroup inlineFormButtonGroup">  
                        <%= f.submit "Search", :class => "form-control btn btn-primary wideButton pull-right inlineFormButton"%>
                      </div>
                      <!--<button type="submit" class="btn btn-primary">Sign in</button>-->
                  </div>
                <%= link_to "Advanced Search", {}, :class => "advancedSearch", :id => "buttonSearch" %>          
            </div>
        </section>
    </div>
</div>

<!-- Advanced Search -->
<div class="row" id="advancedSearch">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2>Advanced Search Parameters</h2>
            </header>
            <div class="panel-body">
                    <div class="form-group ">
                        <%= ad.label :days, "Days", :class => "control-label col-lg-2" %>
                      <div class="col-lg-10">
                        <%= ad.number_field :days, :class => "form-control" %>
                      </div>
                    </div>      
                    <div class="form-group">
                        <label class="control-label col-lg-2" for="inputSuccess">Benefits</label>
                        <div class="col-lg-10">
                            <label class="checkbox-inline">
                                <%= f.check_box :singleroom %> Singleroom
                            </label>
                            <label class="checkbox-inline">
                                <%= f.check_box :surfspot %> Surfspot
                            </label>
                            <label class="checkbox-inline">
                                <%= f.check_box :barbecue %> Barbecue
                            </label>
                            <label class="checkbox-inline">
                                <%= f.check_box :villa %> Villa
                            </label>
                            <label class="checkbox-inline">
                                <%= f.check_box :swimmingpool %> Swimmingpool
                            </label>
                            <label class="checkbox-inline">
                                <%= f.check_box :skiresort %> Skiresort
                            </label>                                                                
                            <label class="checkbox-inline">
                                <%= ad.check_box :remote %> Remote
                            </label>      
                            <% end %>                       
                        </div>
                    </div>  
                  <% end %>
                  <div class="form-group ">
                      <div class="col-lg-10-lg-offset-2 col-lg-10">
                          <%#= f.submit "Update", :class => "btn btn-primary wideButton"%>
                          <%#= link_to "Cancel", edit_user_registration_path, :method => :get, :class => "btn btn-default wideButton" %>
                      </div>
                  </div>      
            </div>
        </section>   
    </div>
</div>


<!-- List of Developers-->
<div class="row">
  <div class="col-sm-12 col-lg-12">
      <section class="panel">
          <header class="panel-heading">
              Locations
          </header>
          <table class="table">
              <thead>
              <tr class="row">
                  <th></th>
                  <th>Firstname</th>
                  <th class="hidden-xs">Lastname</th>
                  <th class="hidden-sm hidden-xs">Country</th>
                  <th class="hidden-sm hidden-xs">Location</th>
                  <th class="hidden-sm hidden-xs">Gender</th>
                  <th class="hidden-sm hidden-xs">Last Seen</th>
                  <th class="hidden-sm hidden-xs Fieldnumber">Experience</th>
                  <th class="hidden-sm">Skills</th>
                  <th class="hidden-xs">Jobtitle</th>
                  <th class="hidden-sm hidden-xs">Website</th>
                  <th class="options">Options</th>
              </tr>
              </thead>
              <tbody>
              <% @developers.each do |developer| %>
                <% user = User.find(developer.user_id) %>
                <tr class="row">
                    <td><span class="profile-ava"><%= image_tag user.avatar.url(:thumb).to_s if user && user.avatar.url != nil %><%= image_tag user.image, :class => "small-image" if user && user.image != nil && user.avatar.url == nil %></span></td>
                    <td class=""><%= user.firstname %></td>
                    <td class="hidden-xs"><%= user.lastname %></td>
                    <td class="hidden-sm hidden-xs"><%= user.country %></td>                  
                    <td class="hidden-sm hidden-xs"><%= user.location %></td>                  
                    <td class="hidden-xs"><%= user.gender %></td>                  
                    <td class="hidden-sm hidden-xs"><%= user.last_sign_in_at %></td>                             
                    <td class="hidden-sm hidden-xs Fieldnumber"><%= developer.experience %></td>
                    <td class="hidden-sm"><%= developer.interest_list %></td>
                    <td class="hidden-xs"><%= developer.skill_list %></td>                  
                    <td class="hidden-xs"><%= developer.jobtitle %></td>                  
                    <td class="hidden-sm hidden-xs Checkbox">
                        <% if developer.website_url %>
                          <%= link_to developer.website_url do %>
                          <i class="fa fa-external-link-square" aria-hidden="true"></i>
                          <% end %>
                        <% else %>
                        <% end %>
                    </td>   
                    <td class="options">
                      <div class="btn-group">
                       <%= link_to developer_path(developer.id), class: "btn btn-primary" do %><i class="fa fa-arrow-right" aria-hidden="true"></i><% end %>
                       <%= link_to edit_developer_path(developer.id), class: "btn btn-success" do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %><%= link_to delete_developer_path(developer.id), class: "btn btn-danger" do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %>
                      </div>
                    </td>
                </tr>
              <% end %>
              </tbody>
          </table>
      </section>
  </div>
</div>

