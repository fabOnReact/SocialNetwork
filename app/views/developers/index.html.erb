<div class="row">
  <div class="col-sm-12">
      <section class="panel">
          <header class="panel-heading">
              Tasks and Projects for your Skills
          </header>
          <table class="table">
              <thead>
              <tr class="row">
                  <th class="col-md-2">Project Name</th>
                  <th class="col-md-2">Country</th>                  
                  <th class="col-md-1 hidden-xs">Location</th>
                  <th class="col-md-2 hidden-xs">Task Name</th>
                  <th class="col-md-2 hidden-xs">Skills</th>
                  <th class="col-md-2 hidden-sm hidden-xs">Host</th>
                  <th class="col-md-1 Fieldnumber hidden-xs">Budget</th>
                  <th class="col-md-2 options">Options</th>
              </tr>
              </thead>
              <tbody>
              <% i = 0 %>
              <% while i < @ads.size do %>
                <% project = Project.find(@ads[i].project_id) %>
                <% location = Location.find(@ads[i].location_id) %>
                <% host = Host.find(location.host_id) %>
                <% user = User.find(host.user_id) %>
                <% task = Task.find(@ads[i].task_id) %>
                  <tr class="row">
                      <td class="col-md-2"><%= project.name %></td>
                      <td class="col-md-2"><%= location.country_name %></td>
                      <td class="col-md-1 hidden-xs"><%= location.location %></td>
                      <td class="col-md-2"><%= task.name %></td>
                      <td class="col-md-2"><%= task.skills_list %></td>                                            
                      <td class="col-md-2 hidden-sm hidden-xs"><%= user.firstname %> <%= user.lastname %></td>
                      <td class="col-md-1 Fieldnumber hidden-xs"><%= project.budget %></td>
                      <td class="col-md-2 options">
                        <div class="btn-group">
                        <%= link_to project_path(project.id), class: "btn btn-primary" do %><i class="fa fa-arrow-right" aria-hidden="true"></i><% end %>
                        </div>
                      </td>                  
                  </tr>
                  <% i+=1 %>
               <% end %>
              </tbody>
          </table>
      </section>
  </div>
</div>

<% old_locations = [] %>
<% @ads.each do |ad| %>
  <% location = Location.find(ad.location_id) %>
  <% if location == old_location %>
  <%# binding.pry %>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                   <h2>Pictures of <%= location.location %></h2>
                </header>
                <div class="panel-body">
                  <div class="form">
                    <div class="row">
                        <%# binding.pry %>
                        <%# if old_location == 0 || location != old_location %>
                          <% location.location_images.each do |p| %>
                          <%# for i in 0..(@location.houseimages.size-1) %>
                          <div class="col-md-3 col-sm-3" id="colPictures">
                            <%= image_tag p.houseimages_url, :class => "center-block houseimage" %>
                            <%#= image_tag @location.houseimages[i].url, :class => "center-block houseimage" %>
                            <%# break if i > 3 %>
                            <%= link_to "Display", location_image_path(p), :class => "imageEdit btn btn-primary" %>
                          </div>
                          <% end %>
                        <%# end %>
                    </div>                 
                  </div>
                </div>
            </section>   
        </div>
    </div>
  <% end %>
  <% old_location << location %>
<% end %>