<div class="row">
  <div class="col-sm-12">
      <section class="panel">
          <header class="panel-heading">
              Projects
          </header>
          <table class="table">
              <thead>
              <tr class="row">
                  <th class="col-md-4">Project Name</th>
                  <th class="Fieldnumber hidden-xs">Location</th>
                  <th class="Fieldnumber hidden-xs"></th>
                  <th class="Fieldnumber hidden-sm hidden-xs">Host</th>
                  <th class="Fieldnumber hidden-sm hidden-xs">Benefits</th>
                  <th class="Checkbox">Budget</th>
                  <th class="options">Options</th>
              </tr>
              </thead>
              <tbody>
              <% while i < @ads.size do %>
                <% project = Project.find(@ads[i].project_id) %>
                <% location = Location.find(@ads[i].location_id) %>
                <% host = Host.find(@ads[i].host_id) %>
                  <tr class="row">
                      <td class="col-md-4"><%= project.name %></td>
                      <td class="col-md-1 Fieldnumber hidden-xs"><%= location.location %></td>
                      <td class="col-md-1 Fieldnumber hidden-xs"><%= project.budget %></td>
                      <td class="col-md-1 Fieldnumber hidden-sm hidden-xs"></td>
                      <td class="col-md-1 Fieldnumber hidden-sm hidden-xs"><%= user.firstname %> <% user.lastname %></td>
                      <td class="col-md-1 Checkbox">
                          <% if project.hiring %>
                            <i class="fa fa-check-square-o" aria-hidden="true"></i>
                          <% else %>
                            <i class="fa fa-square-o" aria-hidden="true"></i>
                          <% end %>
                      </td>
                      <td class="col-md-1 Fieldnumber hidden-sm hidden-xs"><%= host. %></td>
                      <td class="options col-md-3">
                        <div class="btn-group">
                        <%= link_to project_path(project.id), class: "btn btn-primary" do %><i class="fa fa-arrow-right" aria-hidden="true"></i><% end %>
                        <%= link_to edit_project_path(project.id), class: "btn btn-success" do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %><%= link_to delete_project_path(project.id), class: "btn btn-danger" do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %>
                        </div>
                      </td>                  
                  </tr>
              <% end %>
              </tbody>
          </table>
      </section>
  </div>
</div>





