<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2>Location Editing</h2>
            </header>

            <div class="panel-body">
              <div class="form">
                <%#= form_for(@location, html: {class: "form-validate form-horizontal" }) do |f| %>
                  <%= render 'partials/error_messages', object: @location %>                
                  <div class="form-group ">
                      <%= label :country, "Country/Nation", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= country_select(:country, {include_blank: 'Select a country', selected: current_user.country}, {class: 'form-control', :id => "country_select", disabled: true}) %>
                    </div>
                  </div> 
                  <div class="form-group ">
                      <%= label :state, "State/Region", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= text_field :state, :class => "form-control", disabled: true %>
                    </div>
                  </div> 
                  <div class="form-group ">
                      <%= label :location, "Address", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= text_field :location, :class => "form-control", disabled: true %>
                    </div>
                  </div> 
                  <div class="form-group ">
                      <%= label :description, "Description", :class => "control-label col-lg-2" %>
                    <div class="col-lg-10">
                      <%= text_field :description, :class => "form-control", disabled: true %>
                    </div>
                  </div>                   
                  <div class="form-group">
                      <label class="control-label col-lg-2" for="inputSuccess">Benefits</label>
                      <div class="col-lg-10">
                          <label class="checkbox-inline">
                              <%= check_box :singleroom, disabled: true %> Singleroom
                          </label>
                          <label class="checkbox-inline">
                              <%= check_box :surfspot, disabled: true %> Surfspot
                          </label>
                          <label class="checkbox-inline">
                              <%= check_box :barbecue, disabled: true %> Barbecue
                          </label>
                          <label class="checkbox-inline">
                              <%= check_box :villa, disabled: true %> Villa
                          </label>
                          <label class="checkbox-inline">
                              <%= check_box :swimmingpool, disabled: true %> Swimmingpool
                          </label>
                          <label class="checkbox-inline">
                              <%= check_box :skiresort, disabled: true %> Skiresort
                          </label>                                          
                      </div>
                  </div>
                <%# end %> 
              </div>
            </div>
        </section>   
    </div>
</div>

